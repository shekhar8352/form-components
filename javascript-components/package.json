{
  "name": "reusable-form-components-js",
  "version": "1.0.0",
  "description": "A comprehensive library of reusable form components built with Mantine UI and Formik for JavaScript projects",
  "type": "module",
  "main": "./dist/reusable-form-components.umd.js",
  "module": "./dist/reusable-form-components.es.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./dist/reusable-form-components.es.js",
      "require": "./dist/reusable-form-components.umd.js"
    }
  },
  "files": [
    "dist",
    "src/index.d.ts"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode library",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@mantine/core": ">=7.0.0",
    "@mantine/dates": ">=7.0.0",
    "@mantine/form": ">=7.0.0",
    "@mantine/hooks": ">=7.0.0",
    "@mantine/spotlight": "^8.2.8",
    "@monaco-editor/react": "^4.7.0",
    "@tabler/icons-react": "^3.34.1",
    "formik": ">=2.0.0",
    "monaco-editor": "^0.52.2",
    "prism-react-renderer": "^2.4.1",
    "prop-types": "^15.8.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-router-dom": "^7.8.2"
  },
  "peerDependencies": {
    "@mantine/core": ">=7.0.0",
    "@mantine/dates": ">=7.0.0",
    "@mantine/form": ">=7.0.0",
    "@mantine/hooks": ">=7.0.0",
    "formik": ">=2.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "yup": "^1.7.0"
  },
  "keywords": [
    "react",
    "components",
    "form",
    "mantine",
    "formik",
    "ui",
    "javascript",
    "reusable"
  ],
  "author": "Reusable Form Components Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/reusable-form-components.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/reusable-form-components/issues"
  },
  "homepage": "https://github.com/your-org/reusable-form-components#readme"
}
